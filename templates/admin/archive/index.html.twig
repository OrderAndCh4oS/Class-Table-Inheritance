{% extends 'base.html.twig' %}

{% block body %}
    <h1>Archives</h1>
    <div class="bb bw1 pb4 mb4">
        <a class="bg-black hover-bg-blue white pa2 no-underline"
           href="{{ path('admin_archive_new') }}"
        >Create Archive</a>
    </div>
    {% for archive in archives %}
        <div class="bb bw1 pb4 mb4">
            <h2>{{ archive.title }}</h2>
            <a class="bg-black hover-bg-blue white pa2 no-underline dib bn"
               href="{{ path('admin_archive_show', {'archive': archive.id}) }}"
            >View Archive</a>
        </div>
    {% endfor %}
    <p>
        <a class="bg-black hover-bg-blue white pa2 no-underline dib"
           href="{{ path('admin_dashboard') }}"
        >Admin Dashboard</a>
    </p>
{% endblock %}
